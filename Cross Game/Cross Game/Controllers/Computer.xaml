<UserControl x:Class="Cross_Game.Controllers.Computer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cross_Game.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="computer">
    <Grid>
        <StackPanel VerticalAlignment="Center">

            <Image Height="60" Width="60" Source="/Images/computer.png"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nombre:" 
                           Foreground="White"/>
                <TextBlock Text="{Binding ComputerName, ElementName=computer}" 
                           Foreground="White"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>

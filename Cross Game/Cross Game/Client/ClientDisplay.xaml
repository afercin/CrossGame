<Window      x:Class="Cross_Game.Client.ClientDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cross_Game.Client"
             mc:Ignorable="d" 
             Closing="Window_Closing"
             MouseMove="Window_MouseMove"
             MouseDown="Window_MouseDown"
             MouseUp="Window_MouseUp"
             MouseWheel="Window_MouseWheel"
             WindowStyle="None"
             ResizeMode="NoResize"
             WindowState="Maximized"
             Loaded="Window_Loaded"
             WindowStartupLocation="Manual"
             Top="0"
             Left="0"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Name="Display"/>
        <TextBlock Name="FPS" Height="auto" Width="auto" Text="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Foreground="#E6E6E6" Background="#AA000000" TextAlignment="Center" Padding="5"/>
        <TextBlock Name="LogText" Height="auto" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Foreground="#E6E6E6" Background="#AA000000" FontWeight="Bold" FontSize="16" TextAlignment="Center" Padding="10" Visibility="Hidden"/>
    </Grid>
</Window>
